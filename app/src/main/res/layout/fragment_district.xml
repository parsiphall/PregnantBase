<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    tools:context=".view.DistrictFragment">

    <TextView
        android:id="@+id/district_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/district_choose"
        android:textAlignment="center"
        android:textSize="30sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:layout_below="@id/district_textView"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/district_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:entries="@array/districts" />

        <Button
            android:id="@+id/district_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/district_start"/>
    </LinearLayout>

</RelativeLayout>